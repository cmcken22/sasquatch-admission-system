<h2>Programs</h2>
<ul class="circle">
    <ul>
      {{#each model as |oneProgram|}}
          <div class="row model-item">
            <div class="large-12 columns">
              
              
              <div class='row'>
                <div class='editItem' {{action 'selectThis' oneProgram.id}}>{{oneProgram.name}}</div><a href="#" class="button tiny edit-button" {{action 'selectThis'  oneProgram.id}}>Edit</a>
              </div> 
              
              Code - {{oneProgram.code}}<br>
              Subcode - {{oneProgram.subCode}}<br>
              {{#if (eq oneProgram.id currentID)}}
              <br>
                <label>Name
                  {{input value=oneProgram.name type="text"}}
                </label>
                <label>Code
                  {{input value=oneProgram.code type="text"}}
                </label>  
                <label>SubCode
                  {{input value=oneProgram.subCode type="text"}}
                </label>
                
                <a href="#" class="button tiny" {{action 'updateProgramCode' oneProgram.id oneProgram.name oneProgram.code oneProgram.subCode}}>Save</a>
                <a href="#" class="button tiny" {{action 'cancel'}}>Cancel</a>
                <a href="#" class="button tiny" {{action 'deleteProgram' oneProgram}}>Delete</a>
                
              {{/if}}  
                
            </div>
          </div>
      {{/each}}
    </ul>
</ul>
{{purple.add-program}}