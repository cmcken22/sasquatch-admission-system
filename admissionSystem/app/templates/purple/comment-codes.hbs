<h2>Comment Codes</h2>

<ul class="circle">
    <ul>
      {{#each model as |oneCommentCode|}}
          <div class="row model-item">
          <div class="large-12 columns">
            
            
            
            <div class='row'>
              <div class='editItem' {{action 'selectThis' oneCommentCode.id}}>{{oneCommentCode.code}} - {{oneCommentCode.progAction}}</div><a href="#" class="button tiny edit-button" {{action 'selectThis'  oneCommentCode.id}}>Edit</a>
            </div> 
              
            
            {{oneCommentCode.description}}
            {{#if (eq oneCommentCode.id currentID)}}
              
              <br><br>
              <label>Code
                {{input value=oneCommentCode.code type="text"}}
              </label>
              <label>Program Action
                {{input value=oneCommentCode.progAction type="text"}}
              </label>  
              <label>Description
                {{input value=oneCommentCode.description type="text"}}
              </label>
              
              <a href="#" class="button tiny" {{action 'updateCommentCode' oneCommentCode.id oneCommentCode.code oneCommentCode.progAction oneCommentCode.description}}>Save</a>
              <a href="#" class="button tiny" {{action 'cancel'}}>Cancel</a>
              <a href="#" class="button tiny" {{action 'deleteCommentCode' oneCommentCode}}>Delete</a>

            {{/if}}
          </div>
        </div>

      {{/each}}
    </ul>
</ul>
{{purple.add-comment-code}}