<h1>Loads</h1>
<ul class="circle">
    <ul>
      {{#each model as |oneLoad|}}
          
           <div class="row model-item">
            <div class="large-12 columns">
            
              <div class='row'>
                <div class='editItem' {{action 'selectThis' oneLoad.id}}>{{oneLoad.load}}</div><a href="#" class="button tiny edit-button" {{action 'selectThis'  oneLoad.id}}>Edit</a>
              </div>
              
              {{#if (eq oneLoad.id currentID)}}
              
              <br>
              <label>Load
                {{input value=oneLoad.load type="text"}}
              </label>
              
              
              <a href="#" class="button tiny" {{action 'updateLoad' oneLoad.id oneLoad.load}}>Save</a>
              <a href="#" class="button tiny" {{action 'cancel'}}>Cancel</a>
              <a href="#" class="button tiny" {{action 'deleteLoad' oneLoad}}>Delete</a>

            {{/if}}
            
            </div>
          </div>
      {{/each}}
    </ul>
</ul>
{{green.add-load}}
