<form id="add-student-form">
    <h2>Add new Program Record</h2>
    <div class="row">
        <div class="large-12 columns">
            <label>Select Degree
              <select onchange={{action "setDegree" value="target.value"}}>
                <option value=100>Select Degree</option>
                {{#each model.degreeCode as |oneDegree|}}
                    <option value={{oneDegree.id}}>{{oneDegree.name}}</option>
                {{/each}}
             </select>
            </label>
            <label>Select Term
              <select onchange={{action "setTerm" value="target.value"}}>
                <option value=100>Select Term</option>
                {{#each model.termCode as |oneTerm|}}
                    <option value={{oneTerm.id}}>{{oneTerm.name}}</option>
                {{/each}}
             </select>
            </label>
            <label>level 
            {{!--from first year to fourth year--}}
             <select onchange={{action "setLevel" value="target.value"}}>
                <option value=100>Select academic level</option>
                <option value=1>1</option>
                <option value=2>2</option>
                <option value=3>3</option>
                <option value=4>4</option>
             </select>
            </label>
            <label>Status
               {{input value=programStatus id="programStatus" type="text"}} 
            </label>
            <label>Comment
                {{input value=comment id="comment" type="text"}}
            </label>
        </div>
    </div>
</form>
<br>
<a href="#" class="button radius" {{action 'addProgramRecord'}}>Save</a>

