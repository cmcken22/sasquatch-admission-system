<form id="add-student-form">
    <h2>Add new Term Code</h2>
    <div class="row">
        <div class="large-12 columns">
            <label>Term Code
              {{input value=name id="name" type="text"}}
            </label>
        </div>
    </div>
</form>
<br>
<a href="#" class="button radius" {{action 'addTermCode'}}>Save</a>
<a href="#" class="button radius" >Cancel</a>
<input href="#" class="button radius" type='file' accept='file_extension|.csv,.xlsx' id='uploadButton' onchange={{action 'uploadTermCodes' value="target"}}>
