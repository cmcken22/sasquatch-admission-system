<form id="add-student-form">
    <h2>Add new Program Administration</h2>
    <div class="row">
        <div class="large-12 columns">
            <label>Name
              {{input value=name  id="name" type="text"}}
            </label>
            <label>Position
              {{input value=position  id="position" type="text"}}
            </label>
            <label>Department
             <select onchange={{action "setDepartment" value="target.value"}}>
                <option value=100>Select Department</option>
                
                {{#each model.department as |oneDepartment|}}
                    <option value={{oneDepartment.id}}>{{oneDepartment.name}}</option>
                {{/each}}
             </select>
            </label>
        </div>
    </div>
</form>
<br>
<a href="#" class="button radius" {{action 'addProgramAdmin'}}>Save</a>
<a href="#" class="button radius" >Cancel</a>
<input href="#" class="button radius" type='file' accept='file_extension|.csv' id='uploadButton' onchange={{action 'uploadAdmins' value="target"}}>

