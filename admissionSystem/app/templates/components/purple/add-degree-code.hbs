<form id="add-student-form">
    <h2>Add new Degree Code</h2>
    <div class="row">
        <div class="large-12 columns">
            <label>Degree Code
              {{input value=name  id="name" type="text"}}
            </label>
        </div>
    </div>
</form>
<br>
<a href="#" class="button radius" {{action 'addDegCode' name}}>Save</a>
<a href="#" class="button radius" >Cancel</a>
<input href="#" class="button radius" type='file' accept='file_extension|.csv, .xlsx' id='uploadButton' onchange={{action 'uploadDegreeCodes' value="target"}}>