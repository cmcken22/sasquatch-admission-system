<h2>{{selectedStudent.firstName}} {{selectedStudent.lastName}}</h2>



{{#if isEditing}}
    <form>
        <div class="row">
            <div class="large-12 columns">
                <label>First Name
                  {{input value=selectedStudent.firstName type="text" }}
                </label>
            </div>
        </div>
        <div class="row">
            <div class="large-12 columns">
                <label>last Name
                  {{input value=selectedStudent.lastName type="text" }}
                </label>
            </div>
        </div>
        <div class="row">
            <div class="large-12 columns">
                <label>Student Number
                  {{input value=selectedStudent.studentNum  id="studentNum" type="text"}}
                </label>
            </div>
        </div>
        <div class="row">
            <div class="large-12 columns">
                <label>Date of Birth</label>
            </div>
        </div>
        <div class="row">
            <div class="large-12 columns">
                <table id='bdtable'>
                    <tr><th>Day</th><th>Month</th><th>Year</th></tr>
                    <tr>
                        <td>
                            <select onchange={{action "selectDay" value="target.value"}}>
                                {{#each days as |day|}}
                                    {{#if (eq currentDay day)}}
                                        <option selected='selected' value={{day}}>{{day}}</option>
                                    {{else}}
                                        <option value={{day}}>{{day}}</option>
                                    {{/if}}
                                {{/each}}
                            </select>
                        </td>
                        
                        <td>
                            <select onchange={{action "selectMonth" value="target.value"}}>
                                {{#each months as |month|}}
                                    {{#if (eq currentMonth month)}}
                                        <option selected='selected' value={{month}}>{{month}}</option>
                                    {{else}}
                                        <option value={{month}}>{{month}}</option>
                                    {{/if}}
                                {{/each}}
                            </select>
                        </td>
                        
                        <td>
                            <select onchange={{action "selectYear" value="target.value"}}>
                                {{#each years as |year|}}
                                    {{#if (eq currentYear year)}}
                                        <option selected='selected' value={{year}}>{{year}}</option>
                                    {{else}}
                                        <option value={{year}}>{{year}}</option>
                                    {{/if}}
                                {{/each}}
                            </select>   
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </form>
    <br>
    <a href="#" class="button radius" {{action 'save' selectedStudent.id day month year}}>Save</a>
    <a href="#" class="button radius" {{action 'cancel'}}>Cancel</a>
{{else}}
    <ul class="square">
        <ul>
            <p>{{selectedStudent.firstName}} {{selectedStudent.lastName}}</p>
            <p>{{selectedStudent.studentNum}}</p>
            <p>{{selectedStudent.DOB}}</p>
            <p>{{selectedStudent.gender.sex}}</p>
            <p>{{selectedStudent.residency.residency}}</p>
            <p>{{selectedStudent.load.load}}</p>
            <p>{{selectedStudent.city.name}} {{selectedStudent.city.province.name}} {{selectedStudent.city.province.country.name}}</p>
        </ul>
    </ul>
    
    <a href="#" class="button radius" {{action 'edit' selectedStudent.DOB}}>Edit</a>
    <a href="#" class="button radius" {{action 'cancel'}}>Back</a>
    {{#if (eq viewGrades false)}}<a href="#" class="button radius" {{action 'viewGrades'}}>View Grades</a>{{/if}}
    <br>
    {{#if viewGrades}}
        {{#if selectedStudent.marks.length}}
            <h4>{{selectedStudent.firstName}} {{selectedStudent.lastName}}'s Grades</h4>
            {{#each selectedStudent.marks as |oneGrade|}}
                <p>{{oneGrade.course.name}} - {{oneGrade.mark}}</p>
            {{/each}}
            <a href="#" class="button radius" {{action 'viewGrades'}}>Hide Grades</a>
        {{/if}}
    {{/if}}
